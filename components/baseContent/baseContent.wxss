.content {
  /*flex布局  */
  display: flex;
  /*纵向布局  */
  flex-direction: column;
  /*布局居中  */
  align-items: center;
}

/*横向布局  */
.layout_horizontal {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

/*纵向布局  */
.layout_vertical {
  /* height: 100rpx; */
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}

.top {
  height: 120rpx;
  margin: 15rpx 30rpx;
  /* justify-content: center; */
}

.userInfo {
